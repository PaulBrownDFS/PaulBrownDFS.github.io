{
	"$schema": "http://bigcontent.io/cms/schema/v1/schema#",
	"id": "https://paulbrowndfs.github.io/DC/image.json",

	"title": "Image",
	"description": "Image Accelerator",

	"allOf": [{
		"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
	}],

	"propertyOrder": ["image", "imageAltText", "seoText", "imageLink","imageAttributes","imageAttributes24", "imageAttributesMob","imageVersion", "roundel"],

	"type": "object",
	"properties": {
		"image": {
			"title": "Image",
			"description": "insert an image",
			"type": "object",
			"anyOf": [
				{
				"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
			}
		]
		},
		"imageAltText": {
			"type": "string",
			"minLength": 0,
			"maxLength": 150,
			"title": "Image alt text",
			"description": "insert image alt text"
		},
		"imageLink": {
			"type": "string",
			"minLength": 0,
			"maxLength": 255,
			"title": "Image Link",
			"description": "e.g. /zinc"
		},
		"seoText": {
			"type": "string",
			"minLength": 0,
			"maxLength": 100,
			"title": "SEO Text",
			"description": "e.g. ladies-sunglasses"
		},
		"imageAttributes": {
		  "type": "string",
		  "minLength": 0,
		  "maxLength": 255,
		  "title": "1366w D.I. Params",
		  "description": "crop=x&w=y&h=z etc.. "
		},
		"imageAttributes24": {
		  "type": "string",
		  "minLength": 0,
		  "maxLength": 255,
		  "title": "1024w D.I. Params",
		  "description": "crop=x&w=y&h=z etc.. "
		},
		"imageAttributesMob": {
		  "type": "string",
		  "minLength": 0,
		  "maxLength": 255,
		  "title": "Mobile D.I. Params",
		  "description": "crop=x&w=y&h=z etc.. "
		},
		"imageVersion": {
		  "type": "string",
		  "title": "Slider Locale",
		  "description": "Preview: None = UK",
		  "enum": [
		    "ROI",
		    "NL",
				"SP"
		  ]
		},
		"roundel": {
			"type": "array",
			"items": {
				"allOf": [
					{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "Roundel Content",
								"enum": [
									"https://paulbrowndfs.github.io/DC/roundel.json"
								]
							}
						}
					}
				]
			},
			"minItems": 0,
			"maxItems": 4,
			"title": "Roundels",
			"_interpolate": true,
			"description": ""
			}

	}
}
