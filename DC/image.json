{
	"$schema": "http://bigcontent.io/cms/schema/v1/schema#",
	"id": "https://paulbrowndfs.github.io/DC/image.json",

	"title": "Image",
	"description": "Image Accelerator",

	"allOf": [{
		"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
	}],

	"propertyOrder": ["image", "imageAltText", "seoText", "imageLink", "roundel"],

	"type": "object",
	"properties": {
		"image": {
			"title": "Image",
			"description": "insert an image",
			"type": "object",
			"anyOf": [
				{
				"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
			}
		]
		},

		"imageAltText": {
			"type": "string",
			"minLength": 0,
			"maxLength": 150,
			"title": "Image alt text",
			"description": "insert image alt text"
		},

		"imageLink": {
			"type": "string",
			"minLength": 0,
			"maxLength": 255,
			"title": "Image Link",
			"description": "e.g. /zinc"
		},

		"seoText": {
			"type": "string",
			"minLength": 0,
			"maxLength": 100,
			"title": "SEO Text",
			"description": "e.g. ladies-sunglasses"
		},

		"roundel": {
			"title": "Roundel",
			"description": "Roundel Image",
			"type": "array",
			"items": {
				"$ref": "https://paulbrowndfs.github.io/DC/roundel.json"
			},
			"minItems": 0,
			"maxItems": 4,
			"_interpolate": true
		}

	}
}
