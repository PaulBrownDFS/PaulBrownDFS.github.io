{
	"$schema": "http://bigcontent.io/cms/schema/v1/schema#",
	"id": "https://paulbrowndfs.github.io/DC/slider.json",

	"title": "Slider Accelerator",
	"description": "Slider Accelerator",

	"allOf": [{
		"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
	}],

	"propertyOrder": ["slides","loadingColour","loadingPosition", "sliderIdName", "sliderVersion","loop","navigationDots"],

	"type": "object",
	"properties": {
		"slides": {
			"type": "array",
			"items": {
				"allOf": [{
						"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
					},
					{
						"properties": {
							"contentType": {
								"title": "slides",
								"enum": [
									"https://paulbrowndfs.github.io/DC/banner.json",
									"https://paulbrowndfs.github.io/DC/image.json"
								]
							}
						}
					}
				]
			},
			"title": "Slides",
			"description": "",
			"minItems": 1,
			"maxItems": 5
		},
		"imageAttributes": {
		  "type": "string",
		  "minLength": 0,
		  "maxLength": 255,
		  "title": "1366w D.I. Params",
		  "description": "crop=&w=&h= etc.. "
		},
		"imageAttributes24": {
		  "type": "string",
		  "minLength": 0,
		  "maxLength": 255,
		  "title": "1024w D.I. Params",
		  "description": "crop=&w=&h= etc.. "
		},
		"imageAttributesMob": {
		  "type": "string",
		  "minLength": 0,
		  "maxLength": 255,
		  "title": "Mobile D.I. Params",
		  "description": "crop=&w=&h= etc.. "
		},
		"loop": {
			"type": "boolean",
			"title": "Loop slider",
			"description": ""
		},
		"navigationDots": {
			"type": "boolean",
			"title": "Navigation Dots",
			"description": ""
		},
		"sliderIdName": {
		  "type": "string",
		  "minLength": 0,
		  "maxLength": 100,
		  "title": "Slider Id Name",
		  "description": "Ie. \"ExclusiveBrands\" (No Spaces)"
		},
		"sliderVersion": {
		  "type": "string",
		  "title": "Slider Locale",
		  "description": "Preview: UK, ROI, NL, SP",
		  "enum": [
		    "UK",
		    "ROI",
		    "NL",
				"SP"
		  ]
		}
	}
}
