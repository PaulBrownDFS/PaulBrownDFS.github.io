<style>
    html, body {
        background-color: #fff;
        padding: 0;
        margin: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        box-sizing: border-box;
    }

    body * {
        box-sizing: inherit;
    }

    .visualization {
        padding: 20px;
    }

    .article {
        position: relative;
        width: 100%;
        padding-top: calc(100% * 5 / 6);
    }

    .article:first-child {
        position: relative;
        width: 100%;
        padding-top: calc(100% * 9 / 16);
        background-color: #c4dbee;
    }

    .article:nth-child(2) {
        padding-top: calc(50% * 5 / 6);
        float: left;
        width: 50%;
        background-color: #c9d1a4;
    }

    .article:nth-child(3) {
        padding-top: calc(50% * 5 / 6);
        float: right;
        width: 50%;
        background-color: #64a3d2;
    }

    .article:nth-child(4) {
        clear: both;
        width: 100%;
        padding-top: calc(100% * 9 / 16);
        background-color: #d8cfd7;
    }

    .article-image {
        background-size: cover;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
    }

    .article-cta {
        position: absolute;
        display: block;
        bottom: 0;
        left: 0;
        padding: 3%;
        background-color: black;
        color: white;
        text-decoration: none;
        font-size: 2vw;
    }

    .article:first-child .article-cta,
    .article:nth-child(4) .article-cta {
        padding: 1.5%;
    }


    .article-cta:after {
        content: ' >';
    }


</style>

<div class="visualization">

{{#each data.articleList}}
    <div class="article">
        <div class="article-image"
             title="{{imageAltText}}"
             style='background-image: url("//{{image.defaultHost}}/i/{{image.endpoint}}/{{image.name}}?w=1024}}")'></div>
        <a class="article-cta" href="">{{callToActionLabel}}</a>
    </div>
{{/each}}
</div>