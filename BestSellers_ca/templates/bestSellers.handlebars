<div id="bsCarousel" class="carousel slide" data-ride="carousel">
  <h2 class="bs_title">{{variables.[0].title}}</h2>
<!-- Indicators -->
{{#if variables.[0].bottomNav}}
<ol class="carousel-indicators">
  <li data-target="#bsCarousel" data-slide-to="0" class="active"></li>
  <li data-target="#bsCarousel" data-slide-to="1"></li>
</ol>
{{/if}}
<div class="carousel-inner" role="listbox">
  {{#each bestsellers_data.[0]}}

  <div class="item {{#if @first}}active{{/if}}">


    <ul class="bs_slides">
      {{#each this}}
      <li>
        <a href="{{this.link}}" title="{{this.title}} {{this.name}}">
          <div class="bs_wrapper">
            <img src="{{this.image}}" alt="{{this.title}} {{this.name}}">
            <div class="bs_item">
              <h3>{{this.title}}</h3>
              <p>{{truncate this.name 25}}</p>
              <p class="bs_price">{{this.price}}</p>
              <div class="bs_button">
                <p class="bs_primary">Find out more</p>
              </div>
            </div>
          </div>
        </a>
      </li>
      {{/each}}
    </ul>


    <div class="clearfix"></div>
  </div>
  {{/each}}

</div>
<a class="left carousel-control" href="#bsCarousel" role="button" data-slide="prev">
  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#bsCarousel" role="button" data-slide="next">
  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</a>
</div><!-- /.carousel -->
