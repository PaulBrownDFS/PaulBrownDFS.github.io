<div class="BestSellers_Carousel">
  {{#if variables.[0].title}}<h2 class="bs_title">{{variables.[0].title}}</h2>{{/if}}
    <div class="item">
      <ul id="content-slider" class="content-slider {{variables.[0].target}}">
    {{#each bestsellers_data.[0]}}
        <li class="slides_container">
          <ul class="bs_slides">
            {{#each this}}
            <li>
              <a href="{{this.link}}" title="{{this.title}} {{this.name}}">
                <div class="bs_wrapper">
                  <img src="{{this.image}}" alt="{{this.title}} {{this.name}}">
                  <div class="bs_item">
                    <h3>{{this.title}}</h3>
                    <p>{{truncate this.name 21}}</p>
                    <p class="bs_price">{{this.price}}</p>
                    <div class="bs_button">
                      <p class="bs_primary">Find out<br/>more</p>
                    </div>
                  </div>
                </div>
              </a>
            </li>
            {{/each}}
          </ul>
        </li>
    {{/each}}
    </ul>
    </div>
</div>
{{#iff variables.[0].rows '==' 1 }}
<style>
ul#content-slider.{{variables.[0].target}} .slides_container {
    height: 225px !important;
}
#{{variables.[0].target}} .lSAction>a.lSNext, .lSAction>a.lSPrev {
  top: 33% !important;
}
</style>
{{/iff}}

{{#iff variables.[0].rows '==' 3 }}
<style>
.ul#content-slider.{{variables.[0].target}} .slides_container {
  height:675px !important;
}
#{{variables.[0].target}} .lSAction>a.lSNext, .lSAction>a.lSPrev {
  top: 45% !important;
}
</style>
{{/iff}}

{{#iff variables.[0].rows '==' 4 }}
<style>
ul#content-slider.{{variables.[0].target}} .slides_container {
  height:900px !important;
}
#{{variables.[0].target}} .lSAction>a.lSNext, .lSAction>a.lSPrev {
  top: 47.5% !important;
}
</style>
{{/iff}}


{{#iff variables.[0].maxNumOfSlides '==' variables.[0].slidesPerPage }}
<style>
#{{variables.[0].target}} .lSSlideOuter .lSPager.lSpg li {
  display: none;
}
</style>
{{/iff}}

{{#iff variables.[0].bottomNav '!=' true }}
<style>
#{{variables.[0].target}} .lSSlideOuter .lSPager.lSpg li {
  display: none;
}
</style>
{{/iff}}
